# NAME
NAME = base

##############
# SRCS FILES #
##############

# DIRECTORY VARIABLES
SRCS_DIR			:=	src/

# SRCS VARIABLES
SRCS_FILES 			:= \
					main.cpp\
					A.cpp\
					B.cpp\
					C.cpp\
					Base.cpp\
					
SRCS				:=	$(addprefix $(SRCS_DIR), $(SRCS_FILES))

###############
# INGREDIENTS #
###############

# INC
INC_DIR				:=	includes/

# OBJS
OBJS_DIR			:=	objs/
OBJS				:=	$(SRCS:$(SRCS_DIR)%.cpp=$(OBJS_DIR)%.o)

# DEPENDENCIES
DEPS				:=	$(OBJS:$(OBJS_DIR)%.o=$(OBJS_DIR)%.d)

# FLAGS
CXX 				:= c++
CXXFLAGS			:= -Wall -Wextra -Werror -Wshadow -Wno-shadow -std=c++98 #-Wshadow to detect name shadowing issues and -Wno-shadow to suppress them if necessary.
INCFLAGS			:=	-I$(INC_DIR)

# BASH FUNCTIONS
RM 					:= rm -rf
DIR_DUP 			:= mkdir -p $(@D)

###########
# COLORS #
###########
GREEN = '\033[0;32m'
CYAN = '\033[0;36m'
WHITE = '\033[0;37m'

all: $(NAME)

$(NAME): $(OBJS)
		$(CXX) $(CXXFLAGS) $(INCFLAGS) $(OBJS) -o $@
		@echo âœ… $(GREEN)"Project successfully compiled"

$(OBJS_DIR)%.o: $(SRCS_DIR)%.cpp
	@$(DIR_DUP) $(OBJS_DIR)
	$(CXX) $(CXXFLAGS) -MMD -MP $(INCFLAGS) -c $< -o $@

-include $(DEPS)
	

clean:
	@echo ðŸ§¹ $(CYAN)"Removing .o files"$(WHITE)
	${RM} $(OBJS) $(DEPS)

fclean: clean
	@echo ðŸ§¹ $(CYAN)"Removing all"$(WHITE)
	${RM} $(NAME)
	$(RM) $(OBJS_DIR)


re: fclean all

.PHONY: all clean fclean re
